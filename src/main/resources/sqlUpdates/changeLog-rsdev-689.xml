<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-07-25" context="run" author="fraser">
        <comment>Create Stoichiometry tables</comment>
        
        <!-- Create Stoichiometry table -->
        <createTable tableName="Stoichiometry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="parent_reaction_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_parent_reaction" references="RSChemElement(id)"/>
            </column>
            <column name="formula" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="is_reaction" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="additional_metadata" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <!-- Create Stoichiometry_AUD audit table -->
        <createTable tableName="Stoichiometry_AUD">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="REV" type="INT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_stoichiometry_aud_rev" references="REVINFO(REV)"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
            <column name="parent_reaction_id" type="BIGINT"/>
            <column name="formula" type="VARCHAR(255)"/>
            <column name="is_reaction" type="BOOLEAN"/>
            <column name="additional_metadata" type="TEXT"/>
        </createTable>
        
        <!-- Create StoichiometryMolecule table -->
        <createTable tableName="StoichiometryMolecule">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stoichiometry_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_molecule_stoichiometry" references="Stoichiometry(id)"/>
            </column>
            <column name="molecule_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_stoichiometry_molecule_molecule" references="RSChemElement(id)"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="compound" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="coefficient" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="molecular_mass" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="absolute_mass" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="volume" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="used_expected_amount" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="actual_stoichiometry" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="actual_yield" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="yield_percentage" type="DOUBLE">
                <constraints nullable="true"/>
            </column>
            <column name="additional_metadata" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <!-- Create StoichiometryMolecule_AUD audit table -->
        <createTable tableName="StoichiometryMolecule_AUD">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="REV" type="INT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_stoichiometry_molecule_aud_rev" references="REVINFO(REV)"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
            <column name="stoichiometry_id" type="BIGINT"/>
            <column name="molecule_id" type="BIGINT"/>
            <column name="role" type="VARCHAR(20)"/>
            <column name="compound" type="VARCHAR(255)"/>
            <column name="coefficient" type="DOUBLE"/>
            <column name="molecular_mass" type="DOUBLE"/>
            <column name="absolute_mass" type="DOUBLE"/>
            <column name="volume" type="DOUBLE"/>
            <column name="used_expected_amount" type="DOUBLE"/>
            <column name="actual_stoichiometry" type="DOUBLE"/>
            <column name="actual_yield" type="DOUBLE"/>
            <column name="yield_percentage" type="DOUBLE"/>
            <column name="additional_metadata" type="TEXT"/>
        </createTable>
        
        <!-- Create indexes -->
        <createIndex indexName="idx_stoichiometry_parent_reaction" tableName="Stoichiometry">
            <column name="parent_reaction_id"/>
        </createIndex>
        
        <createIndex indexName="idx_stoichiometry_molecule_stoichiometry" tableName="StoichiometryMolecule">
            <column name="stoichiometry_id"/>
        </createIndex>
        
        <createIndex indexName="idx_stoichiometry_molecule_molecule" tableName="StoichiometryMolecule">
            <column name="molecule_id"/>
        </createIndex>
        
        <createIndex indexName="idx_stoichiometry_molecule_role" tableName="StoichiometryMolecule">
            <column name="role"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>